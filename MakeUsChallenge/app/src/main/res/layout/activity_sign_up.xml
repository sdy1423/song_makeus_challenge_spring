<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/charcoal_grey"
    tools:context=".src.login.select.signup.SignUpActivity">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_122"
        android:id="@+id/sign_up_iv_profile"
        android:layout_width="110.3dp"
        android:layout_height="110.3dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="6.7sp"
        android:text="프로필 사진"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.3sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="8.3sp"
        android:text="아이디"
        />
    <EditText
        android:background="@drawable/login_edt_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColorHint="#ffffff"
        android:lineSpacingExtra="6.7sp"
        android:text="Check Your ID"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.3sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="8.3sp"
        android:text="비밀번호"
        />

    <EditText
        android:background="@drawable/login_edt_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="6.7sp"
        android:textColorHint="#ffffff"
        android:textSize="14sp"
        android:text="Password" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.3sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="8.3sp"
        tools:text="이름"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:background="@drawable/login_edt_border"
            android:hint="성"
            android:textColorHint="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/login_edt_border"
            android:hint="이름"
            android:textColorHint="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17.3sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="8.3sp"
        tools:text="이메일"
        />

    <EditText
        android:background="@drawable/login_edt_border"
        android:hint="example@gmail.com"
        android:textColorHint="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:background="@drawable/ic_banner_signup"
        android:onClick="onClick"
        android:text="가입하기"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:id="@+id/sing_up_btn_complete"
        android:layout_width="211dp"
        android:layout_height="40.3dp"/>
</LinearLayout>